{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "noImplicitAny": true,
    "outDir": "dist",
    "rootDir": "./",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node"],
    "moduleResolution": "node"
  },
  "include": [
    "./api/*.ts",
    "./*.js",
    "src/**/*.ts",
    "test/**/*.ts",
    "index.ts",
    "api/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}